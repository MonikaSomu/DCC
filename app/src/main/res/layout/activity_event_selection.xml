<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHint"
    tools:context=".event_selection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_title"
            android:textSize="30sp"
            android:textColorHint="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_start_time"
            android:textSize="20sp"
            android:textColorHint="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="time"
            android:textColor="@color/colorHint"
            />

        <EditText
            android:id="@+id/start_time_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:textColor="@color/colorHint"
            />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_end_time"
            android:textSize="20sp"
            android:textColorHint="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="time"
            android:textColor="@color/colorHint"
            />

        <EditText
            android:id="@+id/end_time_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:textColor="@color/colorHint"
            />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_type"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray"
            />

        <Spinner
            android:id="@+id/ma_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/mental_activity"
            />

        <Spinner
            android:id="@+id/pa_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/physical_activity"
            />

        <Button
            android:id="@+id/add_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_add_ma"
            android:background="@color/colorHint"
            />

        <Button
            android:id="@+id/update_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_update_ma"
            android:background="@color/colorHint"
            />

        <Button
            android:id="@+id/add_pa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_add_pa"
            android:background="@color/colorHint"
            />

        <Button
            android:id="@+id/update_pa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_event_selection_update_pa"
            android:background="@color/colorHint"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>